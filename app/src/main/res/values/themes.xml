<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CallePeninsulares" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Apply Material 3 text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyMedium</item>
    </style>
</resources>
